<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.payment.sample">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true"
        android:name="com.payment.sample.SampleApplication"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light"
        android:icon="@mipmap/ic_launcher">

        <activity android:name="com.payment.sample.SampleActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.payment.sample.LightThemeActivity"
            android:theme="@style/LightTheme" />

        <activity android:name="com.payment.sample.DarkThemeActivity"
            android:theme="@style/DarkTheme" />

    </application>

</manifest>
